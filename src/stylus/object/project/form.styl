.p-form
	&__range
		width: 100%
		margin-top: 40px
		-webkit-appearance: none
		//slider
		&::-webkit-slider-runnable-track
			-webkit-appearance: none
			width 100%
			height 2px
			background #ebebeb
			border none
			border-radius 3px
		//つまみ
		&::-webkit-slider-thumb
			-webkit-appearance: none
			width 40px
			height 40px
			background-color #4a2881
			box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.16)
			border-radius: 50%
			transform translateY(-20px)
			border: 13px solid #fff